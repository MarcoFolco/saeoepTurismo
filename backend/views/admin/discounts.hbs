<section class="dashboard-section w-100 h-100 p-4">
    <div class="row">
        <div class="col title">
            <h2 class="fw-bold text-center text-white display-3"> Discounts management </h2>
            <div class="text-right">
                <a href="/admin/discounts/add" class="btn btn-success">
                    <i class="fa fa-plus"></i> New discount
                </a>
            </div>
        </div>
    </div>
    <div class="header admin-grid">
        <span class="admin-header--field">#</span>
        <span class="admin-header--field">Enterprise FK</span>
        <span class="admin-header--field">Places</span>
        <span class="admin-header--field">Value</span>
        <span class="admin-header--field">Actions</span>
    </div>
    {{#each discounts}}
    <div class="content admin-grid">
        <div class="admin-header--field"><span>{{id}}</span></div>
        <div class="admin-header--field"><span>{{enterprise_fk}}</span></div>
        <div class="admin-header--field"><span>{{places}}</span></div>
        <div class="admin-header--field"><span>{{value}}</span></div>
        <div class="admin-header--field">
            <span>
                <a href="/admin/discounts/edit/{{id}}"><i class="fa fa-pencil" style="margin-right: 15px;"></i></a>
                <a href="/admin/discounts/delete/{{id}}"><i class="fa fa-trash"></i></a>
            </span>
        </div>
    </div>
    {{/each}}
</section>