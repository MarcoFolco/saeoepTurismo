<section class="form-contact w-100 h-100 p-4">
    <h2 class="fw-bold text-center text-white display-3">
        Login<br/>
        <small class="fs-2 px-4">Please fill all the fields to log in to the admin panel.</small>
    </h2>
    <form class="needs-validation" noValidate action="/admin/login" method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control fs-4" id="inputUsername" placeholder="User" name="user" required/>
            <label for="inputUsername" class="text-secondary fw-bold fs-6">User</label>
            <div class="invalid-feedback fs-5 fw-bold">
                This field is required
            </div>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control fs-4" id="inputPassword" placeholder="Password" name="password" required/>
            <label for="inputPassword" class="text-secondary fw-bold fs-6">Password</label>
            <div class="invalid-feedback fs-5 fw-bold">
                This field is required
            </div>
        </div>
        <button type="submit" class="btn fs-4 text-white fw-bold">Login</button>
    </form>
    {{#if error}}
        <small class="fs-5 fw-bold" style="color: red;">Wrong user/password.</small>
    {{/if}}
</section>